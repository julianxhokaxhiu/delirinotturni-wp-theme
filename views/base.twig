{% include 'html-header.twig' %}
{% block header %}
        <div class="navbar navbar-inverse navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <div class="nav-collapse collapse">
                <ul class="nav">
                  <li class="active"><a href="#home">Home</a></li>
                  {{wp_nav_menu}}
                </ul>
                {#
                <div class="pull-right discuss">
                  <a class="btn btn-primary" href="//dev.whilex.it">Partecipa</a>
                </div>
                #}
              </div>
            </div>
          </div>
        </div>
        {% endblock %}
        <div id="home" class="header">
          <h1>{{wp_bloginfo('name')}}</h1>
          <h2>{{wp_bloginfo('description')}}</h2>
          <!-- AddThis Button BEGIN -->
          <div class="addthis_toolbox addthis_default_style">
            <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
            <a class="addthis_button_tweet" tw:via="while_x" tw:related="while_x"></a>
            <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
            <a class="addthis_counter addthis_pill_style"></a>
          </div>
          <script type="text/javascript">
            var addthis_config = addthis_config||{};
            addthis_config.data_track_clickback = false;
          </script>
          <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-515751f7165397d0"></script>
          <!-- AddThis Button END -->
        </div>
        <div class="container">
            <div class="row-fluid">
                <div class="span12">
                    <div class="span8">
                        {% if title %}<h1>{{title}}</h1>{% endif %}
                        <div class="wrapper {{sidebar_class}}">
                            {% block content %}
                                Sorry, no content
                            {% endblock %}
                        </div>
                    </div>
                    <div class="span4">
                        {% if sidebar %}
                            <aside class="layout-sidebar">
                                {{sidebar}}
                            </aside>
                        {% endif %}
                    </div>
                </div>
                <div class="span12">
                    <footer>
                        {% include 'footer.twig' %}
                    </footer>
                </div>
            </div>
        </div>
        {{ null|wp_footer }}
    </body>
</html>